<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Input</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background: #14777e;
        }

        h1,
        h2 {
            text-align: center;
        }

        form {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 20px auto;
        }

        form input,
        form button {
            width: 95%;
            padding: 12px;
            margin: 8px 0;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 15px;
        }

        button {
            cursor: pointer;
            background: #4CAF50;
            color: white;
            border: none;
            font-weight: bold;
            transition: .2s;
        }

        button:hover {
            background: #43a047;
        }

        /* TABLE WRAPPER */
        .table-container {
            overflow-x: auto;
            margin-top: 30px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            background: white;
            border-radius: 10px;
            overflow: hidden;
        }

        th,
        td {
            border: 1px solid #eee;
            padding: 12px 10px;
            text-align: left;
            font-size: 16px;
        }

        th {
            background: #4CAF50;
            color: white;
            font-size: 17px;
        }

        .action-form {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .action-form input {
            padding: 8px;
            font-size: 14px;
        }

        .delete-btn {
            background: #f44336 !important;
        }

        .delete-btn:hover {
            background: #d32f2f !important;
        }
        @media (max-width: 768px) {

            table,
            th,
            td {
                font-size: 14px;
            }

            .action-form {
                flex-direction: column;
            }

            form {
                width: 95%;
            }
        }
    </style>
</head>

<body>

    <h1>User Management System</h1>

    <h2>Add New User</h2>

    <form action="/" method="POST">
        <input type="text" name="userUniqueId" placeholder="User ID" required>
        <input type="text" name="userName" placeholder="Name" required>
        <input type="email" name="userEmail" placeholder="Email" required>
        <input type="number" name="userAge" placeholder="Age" required>
        <button type="submit">Add User</button>
    </form>

    <h2>Users List</h2>

    <div class="table-container">
        <% if (data.length> 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Age</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% data.forEach(function(user) { %>
                        <tr>
                            <td>
                                <%= user.userUniqueId %>
                            </td>
                            <td>
                                <%= user.userName %>
                            </td>
                            <td>
                                <%= user.userEmail %>
                            </td>
                            <td>
                                <%= user.userAge %>
                            </td>

                            <td>
                                <form action="/update" method="POST" class="action-form">
                                    <input type="hidden" name="userUniqueId" value="<%= user.userUniqueId %>">
                                    <input type="text" name="userName" placeholder="New Name">
                                    <input type="email" name="userEmail" placeholder="New Email">
                                    <input type="number" name="userAge" placeholder="New Age">
                                    <button type="submit">Update</button>
                                </form>

                                <form action="/delete" method="POST">
                                    <input type="hidden" name="userUniqueId" value="<%= user.userUniqueId %>">
                                    <button type="submit" class="delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>

            </table>
            <% } else { %>
                <p style="text-align:center; font-size:18px;">No users found. Add some users!</p>
                <% } %>
    </div>

</body>

</html>